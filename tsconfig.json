{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "outDir": "dist/",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": "src/"
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ]
}
